<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toaststyle">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#000</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#388E3C</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">#FBC02D</item>
        <item name="stIconStart">@drawable/ic_android</item>
        <item name="stLength">LONG</item>
    </style>


</resources>
